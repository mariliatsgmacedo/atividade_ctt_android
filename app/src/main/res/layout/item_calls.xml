<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/layout_relative_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image_contact_call"
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:background="@drawable/ic_baseline_supervised_user_circle_24"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txt_name_call"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="Jef"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/image_contact_call"
            android:layout_toEndOf="@id/image_contact_call" />

        <TextView
            android:id="@+id/txt_hour_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_call"
            android:layout_toEndOf="@id/image_contact_call"
            android:textSize="12sp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/data_message_call"
            android:layout_toRightOf="@id/image_contact_call" />

        <ImageView
            android:id="@+id/image_icon_calls"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_call_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/txt_hour_call"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:backgroundTint="@color/green_whats_icon"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lineDivisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_relative_call"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>